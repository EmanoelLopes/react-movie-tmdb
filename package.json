    "@fortawesome/free-solid-svg-icons": "^5.8.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "axios": ">=0.21.1",
    "date-fns": "^1.30.1",
    "env-cmd": "^9.0.2",
    "prop-types": "15.7.2",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "react-intl-universal": "1.15.5",
    "react-redux": "6.0.1",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-scripts": "2.1.8",
    "react-transition-group": "^4.0.1",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "styled-components": "4.1.3",
    "styled-reset": "^2.0.10",
    "uuid": "3.3.2"
  },
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "yarn lint --fix",
    "start": "rescripts start",
    "build": "rescripts build",
    "build:staging": "REACT_APP_ENV=staging npm run build",
    "deploy:surge": "yarn build && surge --project /Users/emanoellopes/development/studies/react/react-movie-tmdb/build --domain https://react-movie-db.surge.sh",
    "test": "rescripts test",
    "test:verbose": "yarn test --verbose",
    "test:no-watch": "yarn test --no-watch",
    "test:coverage": "yarn test --coverage --env=jsdom",
    "eject": "rescripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/*.{js}",
      "!src/utils/*.{js}"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test:no-watch"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "rescripts": [
    "env"
  ],
  "devDependencies": {
    "@rescripts/cli": "0.0.10",
    "@rescripts/rescript-env": "0.0.10",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.11.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-jest": "22.4.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-utils": "^1.4.2",
    "http-proxy-middleware": "0.19.1",
    "husky": "1.3.1",
    "jest-enzyme": "7.0.2",
    "jest-styled-components": "6.3.1",
    "moxios": "^0.4.0",
    "redux-devtools-extension": "2.13.8",
    "redux-logger": "3.0.6",
    "redux-mock-store": "^1.5.3"
  }
